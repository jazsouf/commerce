---
import { PortableText as PortableTextInternal } from "astro-portabletext";
import type { PortableTextProps } from "astro-portabletext/types";
import { List } from "astro-portabletext/components";
import RichTextLinkInternal from "./RichTextLinkInternal.astro";
import RichTextLinkExternal from "./RichTextLinkExternal.astro";

interface Props {
  content: PortableTextProps["value"];
}

const { content } = Astro.props;

const components = {
  list: List,
  mark: {
    linkInternal: RichTextLinkInternal,
    linkExternal: RichTextLinkExternal,
  },
};
---

<PortableTextInternal value={content} components={components} />
